{
	"extends": "@mono/config-ts",
	"compilerOptions": {
		"paths": {
			"@/*": ["./src/*"]
		},
		"allowJs": true,
		"incremental": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
